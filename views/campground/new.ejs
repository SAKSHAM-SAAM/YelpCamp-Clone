<% include ../partials/header %>
<div class="container">
    <div class="text-center">
        <h2>Add New Campground</h2>
    </div>
    <div style="width:30%; margin: 30px auto ;">
        <form action="/campground" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Campground name">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="Price" min="0.1" step="0.1">
            </div>
            <div class="form-group">
                 <input class="form-control" type="text" name="image" placeholder="image-url" >
            </div>
            <div class="form-group">
                 <input class="form-control" type="text" name="description" placeholder="describe-the-Place" >
            </div>
           
            <button class="btn btn-primary btn-lg btn-block">Submit</button>
        </form>
        <a href="/campground" >Go back</a>
    </div>
           
</div>

<% include ../partials/footer %>